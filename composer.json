{
    "name": "marcorieser/tailwind-merge-statamic",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MarcoRieser\\TailwindMergeStatamic\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarcoRieser\\TailwindMergeStatamic\\Tests\\": "tests"
        }
    },
    "require": {
        "lumen-ui/lumen-tw": "^0.3.0",
        "statamic/cms": "^4.0|^5.0|^6.0"
    },
    "require-dev": {
      "orchestra/testbench": "^9.0 || ^10.0",
      "phpunit/phpunit": "^10.5|^11.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Tailwind Merge Statamic",
            "description": "Automatically resolves Tailwind CSS class conflicts in Statamic"
        },
        "laravel": {
            "providers": [
                "MarcoRieser\\TailwindMergeStatamic\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
